<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".RegistrarActivity">

    <include
        layout="@layout/toolbar_registrar"
        ></include>

    <TextView

        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Registro de pacientes"
        android:textSize="30sp"
        android:layout_gravity="center"



        ></TextView>

    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="30dp"

        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"

            android:text="Rut:"
            android:textSize="20sp"



            ></TextView>
        <EditText
            android:inputType="text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/rutTxtR"
            android:background="@color/color1"
            android:hint=" Rut"


            ></EditText>

    </LinearLayout>

    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="30dp"

        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"

            android:text="Nombre:"
            android:textSize="20sp"



            ></TextView>
        <EditText
            android:inputType="text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/nombreTxtR"
            android:background="@color/color1"
            android:hint="Nombre"



            ></EditText>

    </LinearLayout>

    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="30dp"

        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"

            android:text="Apellido:"
            android:textSize="20sp"



            ></TextView>
        <EditText
            android:inputType="text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/apellidoTxtR"
            android:background="@color/color1"
            android:hint="Apellido"


            ></EditText>



    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="@dimen/margenItem"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="horizontal"

        >

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:background="@color/color3"
            android:layout_gravity="center"

            android:id="@+id/fechaBtn"
            android:text="Fecha:"
            android:textSize="@dimen/itemSize"
            android:onClicl="onClick"



            ></Button>

        <EditText
            android:inputType="date"
            android:focusable="false"
            android:maxLines="1"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/fechaTxt"
            android:hint="FechaTxt"




            ></EditText>



    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="@dimen/margenItem"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="horizontal"


        >

        <TextView
            android:layout_marginTop="@dimen/margenItem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"

            android:text="Area de trabajo:"
            android:textSize="@dimen/itemSize"



            ></TextView>
        <Spinner
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/areaSpn"



            ></Spinner>

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="@dimen/margenItem"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="horizontal"


        >

        <TextView
            android:layout_marginTop="@dimen/margenItem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"

            android:text="presenta Sintomas:"
            android:textSize="@dimen/itemSize"



            ></TextView>
        <Switch
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/sintomasSw"




            ></Switch>

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="@dimen/margenItem"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="horizontal"


        >

        <TextView
            android:layout_marginTop="@dimen/margenItem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"

            android:text="presenta tos:"
            android:textSize="@dimen/itemSize"



            ></TextView>
        <Switch
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/tosSw"




            ></Switch>

    </LinearLayout>

    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="30dp"

        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"

            android:text="Presion Arterial:"
            android:textSize="20sp"



            ></TextView>
        <EditText
            android:inputType="number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/presionTxt"

            android:hint="presion"


            ></EditText>



    </LinearLayout>



    <LinearLayout
        android:layout_marginTop="@dimen/margenItem"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="horizontal"

        >

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:background="@color/color4"
            android:layout_gravity="center"

            android:id="@+id/registrarBtn"
            android:text="Fecha:"
            android:textSize="@dimen/itemSize"
            android:onClicl="registrarPaciente"
            android:layout_marginLeft="@dimen/margenItem"
            android:layout_marginRight="@dimen/margenItem"
            ></Button>





    </LinearLayout>


</LinearLayout>